{
    "project_name" : "prueba",
    "data_path": "data/bank-full.csv", 
    "sep" : ";",
    "target_column": "y",
    "split" : 0.1,

    "missing_threshold" : 0.1,
    "numeric_imputer" : "mean",
    "categorical_imputer" : "most_frequent",
    "variable_imputer": "KNNImputer", 
    "imputer_n_neighbors" : 5,

    "max_imputer": 0.3, 
    "Scaler": "seleccionar metodo de escalado",

    "threshold_outlier" : 4,
    "balance_method" : "over_sampling",
    "balance_thershold" : 0.7,
    "k_features" : 0.5,
    "delete_columns" : [],

    "categorical_columns_label": ["gender", "marital_status"],
    "categorical_columns_onehot": ["country", "occupation"],

    "model_type" : "Classification",
    "function": "training", 
    "n_jobs": -1,
    "cv": 5,
    "scoring_regression": "neg_mean_absolute_error",
    "scoring_classification" :"f1_score",
    "random_state": 1234,

    "models_regression": {
        "linearRegression" : true,
        "ridge" : true,
        "random_forest": false,
        "ada_boost" : false,
        "gradient_boosting" : false,
        "lightGBM": false
    },

    "params_regression" : {
        "linearRegression" :{
                "fit_intercept": [true, false]
        },

        "ridge": {
            "alpha": [0.001, 0.01, 0.1, 1.0, 10.0, 100.0, 1000.0]
        },

        "random_forest": {
            "n_estimators": [20,50,100,200],
            "max_depth": [5, 10, 20],
            "max_features": ["n","log2(n)","sqrt(n)", "eleccion"],
            "criterion":["squared_error", "absolute_error", "friedman_mse", "poisson"]
        },
        
        "ada_boost": {
            "n_estimators" : [10,30,50,70,100],
            "learning_rate" :[0.001,0.01,0.1]
        },

        "gradient_boosting": {
            "n_estimators": [10,30,50,70,100],
            "learning_rate": [0.1, 0.01, 0.001],
            "max_depth": [3, 5, 7]
        },

        "lightGBM":{
            "n_estimators": [10,50,200,500],
            "max_depth": [3, 5, 10],
            "learning_rate": [0.001, 0.01, 0.1],
            "num_leaves": [5, 10, 15]
        }
    },

    "models_classification": {
        "logisticRegression": false,
        "random_forest": true,
        "SVM" : true,
        "KNN" : false,
        "GaussianNB": true,
        "MultinomialNB": true,
        "BernoulliNB": true
    },

    "params_classification" : {
        "logisticRegression": {
            "multi_class": ["ovr", "multinomial"],
            "solver" : ["liblinear","lbfgs", "newton-cg", "newton-cholesky", "sag", "saga"],
            "class_weight" : ["balanced"],
            "max_iter" : 100,
            "penalty" : "None"
        },

        "random_forest": {
            "n_estimators" : [20, 50, 100, 200, 300],
            "max_features" : [5, 7, 9],
            "max_depth" : [5, 10, 20, 30, 40, 50],
            "criterion" : ["gini", "entropy"]
        },

        "SVM": {
            "kernel" : ["linear", "rbf", "poly"],
            "C": [0.1, 1, 10], 
            "gamma": ["scale", "auto", 1.0],
            "degree": 3,
            "coef0": 0.0
        },

        "KNN" : {
            "n_neighbors": [3, 5, 7, 9],
            "weights": ["uniform", "distance"],
            "metric": ["euclidean", "manhattan", "minkowski"],
            "p": [1, 2]  
        },

        "GaussianNB" :{

        },
        "MultinomialNB" :{

        },
        "BernoulliNB" :{

        }
        
    }
}
